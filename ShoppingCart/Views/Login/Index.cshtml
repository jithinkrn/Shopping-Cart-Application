@{
    ViewData["Title"] = "Login";
 }

<h2>Member Login</h2>


<form action="/Login/Login" method="post">
    <div style="text-align:center">
        <div class="my_tbl">
            <div class="my_row">
                <div class="my_cell">
                    Username
                </div>
                <div class="my_cell">
                    <input name="username" />
                </div>
            </div>
            <div class="my_row">
                <div class="my_cell">
                  
                    Password
                </div>
                <div class="my_cell">
                    <input name="password" type="password" />
                </div>
            </div>
            <div class="my_row">
                <div class="my_cell"></div>
                <br />
                <div class="my_cell" style="text-align: center">
                    <input type="submit" value="Login Member " class="btn btn-primary" />
                    <br />
                    <br />
                    <!--
                    <div class="my_cell" style="text-align: center">
                        <input type="submit" value="Guest-View  " class="btn btn-primary" />
                    </div>
                        -->
                    <p><font color="red">@TempData["Message"]</font></p>
                
                </div>
            </div>
        </div>
    </div>
</form>


<form action="/Login/GuestLogin" method="post">

    <div class="my_cell" style="text-align: center">
       
        <div class="my_cell" style="text-align: center">
            <input type="submit" value="Login as Guest  " class="btn btn-primary" />
        </div>

        
    </div>

</form>

